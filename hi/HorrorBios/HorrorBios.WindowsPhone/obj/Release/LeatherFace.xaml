            	<LineBreak/>
            	<Span>
            		<Run Text="Texas Chainsaw Massacre: Next Generation"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="The Texas Chainsaw Massacre"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="The Texas Chain Massacre: The Beginning"/>
