    <Grid>
        <TextBlock FontSize="30" FontWeight="Bold" Foreground="DodgerBlue" HorizontalAlignment="Left" Margin="115,68,0,0" TextWrapping="Wrap" Text="LeatherFace" VerticalAlignment="Top" Height="40" Width="190"/>
        <Image HorizontalAlignment="Left" Height="230" Margin="95,158,0,0" VerticalAlignment="Top" Width="210" Source="/Assets/Leather.png"/>
        <Button x:ConnectionId='1' Content="" HorizontalAlignment="Left" Margin="10.059,-6.265,0,0" VerticalAlignment="Top"                      Height="72.688" Width="135.046" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
