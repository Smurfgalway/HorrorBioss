<Page
    x:Class="HorrorBios.Freddie_Krueger"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HorrorBios"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Black"></SolidColorBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" Foreground="Gray" FontSize="30" Margin="105,76.05,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37.748" Width="230" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <TextBlock.RenderTransform>
                <CompositeTransform SkewY="-0.561" TranslateY="0.612"/>
            </TextBlock.RenderTransform>
    		<Run Text="Freddy"/>
    		<Run Text=" Krueger"/>
        </TextBlock>
        <Image HorizontalAlignment="Left" Source="/Assets/Freddy.jpg" Height="175" Margin="75,138,0,0" VerticalAlignment="Top" Width="255"/>
        <Button x:ConnectionId='1' Content="" HorizontalAlignment="Left" Margin="0,-11,0,0" VerticalAlignment="Top"                      Height="79" Width="135" RenderTransformOrigin="-0.308,0.721">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/Previous.gif"></ImageBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='2' Content="" HorizontalAlignment="Left" Margin="271,-10,0,0" VerticalAlignment="Top" Height="78" Width="129"                       >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/Next2.png"></ImageBrush>
            </Button.Background>
        </Button>
        <ScrollViewer HorizontalAlignment="Left" Height="195" Margin="55,398,0,0" VerticalAlignment="Top" Width="310">
            <TextBlock x:ConnectionId='3' FontSize="20" TextWrapping="Wrap"                                              >
            	<Span>
            		<Run Text="Freddy Kruger The dream demon possible the single most Iconic Horror movie Villain ever arguably more famous than anyone else on this list. Freddy is a Demonic shape shifting burn victim murder who haunts the teens of elm street to make them pay for their parents actions and to fulfill his sick fantasies. Back when Freddy was a mere mortal he was a child murder and in the latest installment which is a retelling of the first movie it is also implied he was a molester would abuse his victims before killing them. He used to lure kids to the boiler room in his house where he would dispose of them. Parents of Elm Street revolted against the legal decision that let Freddy off scot free when police illegally searched his house. Taking the law into their own house they corner him in his house and lit it on fire. Freddy's body but his spirit entered the dream world to haunt the teens and wreak revenge on Elm Street. "/>
            	</Span>
            	<LineBreak/>
            	<LineBreak/>
            	<Span>
            		<Run Text="Each version of Freddy is terrifying with little to no change:"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="Age: 35"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="Height: 5f10"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="Build: Average"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="Other defining characteristics:"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="Badly burnt skin, metal claw on his left hand, shape shifting and controls the dreams, can murder a person in their dream, comes back usually stronger."/>
            	</Span>
            	<LineBreak/>
            	<LineBreak/>
            	<Span>
            		<Run Text="List of movies:"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="A Nightmare on Elm Street"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="A Nightmare on Elm Street 2: Freddy's Revenge"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="A Nightmare on Elm Street 3: Dream Warriors"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="A Nightmare on Elm Street 4: The Dream Master"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="A Nightmare on Elm Street 5: The Dream Child"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="Freddy's Dead: The Final Nightmare "/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="Wes Craven's New Nightmare "/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="Freddy vs. Jason"/>
            	</Span>
            	<LineBreak/>
            	<Span>
            		<Run Text="A Nightmare on Elm Street (2010 remake)"/>
            	</Span>
            	<LineBreak/>
            	<Run/>
            </TextBlock>
        </ScrollViewer>

    </Grid>
</Page>

